{
    "manifest_version": 3,
    "name": "Pattern Mapping Extension",
    "version": "1.0",
    "description": "Browser extension for in-context software pattern augmentation on technology websites.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content-script.tsx"
            ],
            "css": [
                "src/extension-sidebar.scss"
            ]
        }
    ]
}